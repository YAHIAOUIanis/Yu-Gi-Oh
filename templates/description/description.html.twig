{% extends 'base.html.twig' %}

{% block title %}Card's description{% endblock %}

{% block body %}
    <br>
    <div class="container">
        <div class="row">
            <img src={{ card.url }} alt="" height="320" width="210">
            <div class="col-md-4">
                <div class="card text-white bg-info mb-3" style="max-width: 20rem;">
                    <div class="card-header">Description</div>
                    <div class="card-body">
                        <p class="card-text">{{ card.text }}</p>
                    </div>
                </div>
            </div>

            {% if card.level != 0 %}
            <div class="col-md-2">
                <div class="card text-white bg-info mb-3" style="max-width: 20rem;">
                    <div class="card-header">Level</div>
                    <div class="card-body">
                        <p class="card-text">{{ card.level }}</p>
                    </div>
                </div>

                <div class="card text-white bg-info mb-3" style="max-width: 20rem;">
                    <div class="card-header">Family</div>
                    <div class="card-body">
                        <p class="card-text">{{ card.family }}</p>
                    </div>
                </div>
            </div>

            <div class="col-md-2">
                <div class="card text-white bg-info mb-3" style="max-width: 15rem;">
                    <div class="card-header">Atk</div>
                    <div class="card-body">
                        <p class="card-text">{{ card.atk }}</p>
                    </div>
                </div>

                <div class="card text-white bg-info mb-3" style="max-width: 15rem;">
                    <div class="card-header">Def</div>
                    <div class="card-body">
                        <p class="card-text">{{ card.def }}</p>
                    </div>
                </div>
            </div>
            {% endif %}
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <h3 class="text-center">Select your deck</h3>

            <div class = "container">
                <form action="{{ path('addCard', {'id': card.id}) }}" method="POST">

                    <div class = "form-group">
                        <select class="form-control form-control-lg" name="choosenDeck">
                            {% for d in decks %}
                                <option value="{{ d.id }}"> {{ d.deckName }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <button type="submit" class="btn btn-outline-info btn-lg btn-block">Add this card your deck</button>
                </form>
            </div>
        </div>
    </div>
    {% include ('inc/footer.html.twig') %}
{% endblock %}
