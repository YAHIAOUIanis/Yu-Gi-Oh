{% extends 'base.html.twig' %}

{% block title %}Publicated decks{% endblock %}

{% block body %}
    <div class = "container">
        <h1>Publicated decks</h1>

        {% for deck in decks %}

            {% if deck.getPosted() %}

                <li><h3><a href="{{ path('deckBuilder.show', {'id': deck.id}) }}">{{ deck.deckName }}</a></h3></li>
                <a href="{{ path('like', {'idDeck': deck.id}) }}" class="btn btn-link js-like">
                    {% if deck.isLikedByUser(app.user) %}
                        <i class="fas fa-thumbs-up"></i>
                    {% else %}
                        <i class="far fa-thumbs-up"></i>
                    {% endif %}
                    <span class="js-likes">{{ deck.likes | length }}</span>
                    <span class="js-label">Likes</span>
                </a>
                {% if user == deck.getUser() %}
                    <button class="btn btn-success" onclick="window.location='{{ path('retrieve', {'id': deck.id}) }}'">Retrieve my deck to modify it</button>
                {% endif %}

            {% endif %}

        {% endfor %}
    </div>
{% endblock %}
